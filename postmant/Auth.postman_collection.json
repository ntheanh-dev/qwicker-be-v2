		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const res = pm.response.json(); \r",
							"\r",
							"pm.globals.set(\"access_token\", res.result.accessToken);\r",
							"pm.globals.set(\"refresh_token\",res.result.refreshToken)\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
